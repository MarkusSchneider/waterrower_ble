            "env": {
                "DEBUG": "MAIN,HR_MONITOR,FTMS_SRV,FTMS,FIT_GENERATOR,GARMIN_UPLOADER,CONFIG_MANAGER,TRAINING_SESSION,WEB_SERVER"
