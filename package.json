{
  "name": "waterrower_ble",
  "version": "1.0.0",
  "description": "Publish WaterRower Data collected via a serial S4 communication as bluetooth low energy messages. A WaterRower can then used by Training Platforms like Zwift, Kinomap, IndieVelo, ...",
  "main": "index.js",
  "scripts": {
    "clean": "rimraf ./dist",
    "build": "npm run clean && tsc -b",
    "serve:node": "npm run build && node dist/src",
    "serve": "ts-node src",
    "watch": "nodemon src -e ts --exec 'npm run serve'"
  },
  "keywords": [
    "WaterRower",
    "bluetooth",
    "BLE",
    "Zwift",
    "S4"
  ],
  "author": "MarkusSchneider",
  "license": "MIT",
  "devDependencies": {
    "@types/jasmine": "^5.1.4",
    "@types/node": "20.11.16",
    "jasmine": "^5.1.0",
    "nodemon": "3.0.3",
    "npm-run-all": "4.1.5",
    "rimraf": "5.0.5",
    "ts-node": "10.9.2",
    "typescript": "5.3.3"
  }
}
